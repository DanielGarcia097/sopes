        .main-content
          .section__content.section__content--p30
            .container-fluid
              .row
                .col-md-12
                  .overview-wrap
                    h2.title-1 Información de Procesos
              div
                .col-sm-6.col-lg-3
                  .overview-item.overview-item--c1
                    .overview__inner
                      .overview-box.clearfix
                        .icon
                          i.zmdi.zmdi-account-o
                        .text
                          h2 Corriendo
                          span #{data1[3]}
                      .overview-chart
                        canvas#widgetChart1
                .col-sm-6.col-lg-3
                  .overview-item.overview-item--c2
                    .overview__inner
                      .overview-box.clearfix
                        .icon
                          i.zmdi.zmdi-shopping-cart
                        .text
                          h2 Suspendidos
                          span #{data1[0]}
                      .overview-chart
                        canvas#widgetChart2
                .col-sm-6.col-lg-3
                  .overview-item.overview-item--c3
                    .overview__inner
                      .overview-box.clearfix
                        .icon
                          i.zmdi.zmdi-calendar-note
                        .text
                          h2 Ociosos
                          span #{data1[1]}
                      .overview-chart
                        canvas#widgetChart3
                .col-sm-6.col-lg-3
                  .overview-item.overview-item--c4
                    .overview__inner
                      .overview-box.clearfix
                        .icon
                          i.zmdi.zmdi-money
                        .text
                          h2 Zombie
                          span #{data1[4]}
                      .overview-chart
                        canvas#widgetChart4
                .col-sm-6.col-lg-3
                  .overview-item.overview-item--c5
                    .overview__inner
                      .overview-box.clearfix
                        .icon
                          i.zmdi.zmdi-account-o
                        .text
                          h2 Detenidos
                          span #{data1[2]}
                      .overview-chart
                        canvas#widgetChart1
              .row
                .col-md-12
                  // DATA TABLE
                  h3.title-5.m-b-35 data table
                  form#form1(action='/inicio',method='POST')
                    .table-responsive.table-responsive-data2
                      table.table.table-data2
                        thead
                          tr
                            th PID
                            th Usuario
                            th Nombre
                            th %RAM
                            th Estado
                            th
                        tbody
                        - for (var i = 0; i <= data2.length -1; i++)
                          tr.tr-shadow
                            - var arreglo = data2[i];
                            td #{arreglo[0]}
                            td
                              span.block-email #{arreglo[1]}
                            td.desc #{arreglo[3]}
                            td #{arreglo[4]}
                            td
                              - var state = arreglo[2]
                              if state == "R"
                                span.status--process #{arreglo[2]} Corriendo
                              else if state == "S"
                                span.status--sleeping #{arreglo[2]} Suspendido
                              else if state == "Z"
                                span.status--zombie #{arreglo[2]} Zombie
                              else if state == "I"
                                span.status--idlee #{arreglo[2]} Ocioso
                              else if state == "T"
                                span.status--denied #{arreglo[2]} Detenido
                            td
                              .table-data-feature
                                button.item(name = 'processid',data-toggle='tooltip', data-placement='top', title='Delete', type='submit', form='form1', value=arreglo[0])
                                  i.zmdi.zmdi-delete
                  // END DATA TABLE
